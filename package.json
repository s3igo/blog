{
  "$schema": "https://www.schemastore.org/package.json",
  "name": "blog",
  "version": "0.1.0",
  "type": "module",
  "private": true,
  "scripts": {
    "prepare": "husky",
    "new": "scaffdog generate post",
    "dev": "astro dev",
    "build": "astro build",
    "build:clean": "rm -rf ./dist",
    "preview": "astro preview",
    "check": "astro check",
    "check:svelte": "svelte-check",
    "astro:clean": "rm -rf ./.astro",
    "biome:write": "biome check --write .",
    "biome:unsafe": "biome check --write --unsafe .",
    "biome:ci": "biome ci .",
    "lint:text": "textlint ./src/content/posts/**/*.md",
    "lint:ls": "ls-lint",
    "lint:knip": "knip",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:type": "tsc -noEmit",
    "coverage": "vitest run --coverage",
    "coverage:clean": "rm -rf ./coverage",
    "clean": "rm -rf ./node_modules",
    "clean:all": "bun run clean && bun run astro:clean && bun run build:clean && bun run coverage:clean"
  },
  "dependencies": {
    "@astrojs/partytown": "2.1.4",
    "@astrojs/rss": "4.0.12",
    "@astrojs/svelte": "7.1.1",
    "@fontsource/jetbrains-mono": "5.2.8",
    "@fontsource/zen-kaku-gothic-new": "5.2.7",
    "@tailwindcss/vite": "4.1.13",
    "astro": "5.13.9",
    "astro-expressive-code": "0.41.3",
    "browserslist": "4.26.2",
    "lightningcss": "1.30.1",
    "markdown-it": "14.1.0",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "sanitize-html": "2.17.0",
    "satori": "0.18.3",
    "sharp": "0.34.4",
    "svelte": "5.39.2",
    "tailwindcss": "4.1.13",
    "typescript": "5.9.2",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "0.9.4",
    "@biomejs/biome": "2.2.4",
    "@ls-lint/ls-lint": "2.3.1",
    "@playwright/test": "1.55.0",
    "@types/markdown-it": "14.1.2",
    "@types/node": "22.18.6",
    "@types/sanitize-html": "2.16.0",
    "@types/unist": "3.0.3",
    "@vitest/coverage-v8": "3.2.4",
    "husky": "9.1.7",
    "knip": "5.63.1",
    "lost-pixel": "3.22.0",
    "scaffdog": "4.1.0",
    "svelte-check": "4.3.1",
    "textlint": "15.2.2",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-preset-ja-technical-writing": "12.0.2",
    "typescript-svelte-plugin": "0.3.50",
    "vitest": "3.2.4"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@tailwindcss/oxide",
    "esbuild",
    "odiff-bin",
    "oxc-resolver",
    "sharp"
  ]
}
