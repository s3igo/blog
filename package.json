{
  "name": "blog",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "browserslist": ["defaults"],
  "scripts": {
    "prepare": "husky",
    "start": "bunx astro dev",
    "build": "astro build",
    "build:clean": "rm -rf ./dist",
    "preview": "bun run build && astro preview",
    "check": "astro check",
    "lint:text": "textlint ./src/content/posts/**/*.md",
    "lint:ls": "ls-lint",
    "biome": "bunx @biomejs/biome check .",
    "biome:fix": "bunx @biomejs/biome check --apply .",
    "biome:apply": "bunx @biomejs/biome check --apply-unsafe .",
    "biome:ci": "bunx @biomejs/biome ci .",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:type": "tsc -noEmit",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "coverage:clean": "rm -rf ./coverage",
    "clean": "rm -rf ./node_modules",
    "new": "scaffdog generate"
  },
  "dependencies": {
    "@astrojs/partytown": "^2.0.4",
    "@astrojs/rss": "4.0.5",
    "@astrojs/sitemap": "3.1.1",
    "@astrojs/solid-js": "4.0.1",
    "@astrojs/tailwind": "5.1.0",
    "@fontsource/jetbrains-mono": "5.0.19",
    "@fontsource/zen-kaku-gothic-new": "5.0.18",
    "@iconify-icon/solid": "2.0.0",
    "@iconify-json/line-md": "1.1.36",
    "@kobalte/core": "0.12.6",
    "astro": "4.5.6",
    "astro-compress": "2.2.15",
    "astro-expressive-code": "^0.33.5",
    "astro-icon": "1.1.0",
    "astro-seo": "0.8.3",
    "autoprefixer": "10.4.18",
    "clsx": "2.1.0",
    "markdown-it": "14.1.0",
    "postcss-load-config": "5.0.3",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "remark-code-titles": "0.1.2",
    "sanitize-html": "2.12.1",
    "solid-icons": "1.1.0",
    "solid-js": "1.8.15",
    "tailwindcss": "3.4.1",
    "typescript": "5.4.2",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "0.5.9",
    "@biomejs/biome": "1.6.1",
    "@ls-lint/ls-lint": "2.2.3",
    "@playwright/test": "1.42.1",
    "@types/markdown-it": "13.0.7",
    "@types/sanitize-html": "2.11.0",
    "@types/unist": "3.0.2",
    "@vitest/coverage-v8": "1.4.0",
    "globals": "14.0.0",
    "husky": "9.0.11",
    "jsdom": "24.0.0",
    "scaffdog": "3.0.0",
    "textlint": "14.0.4",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "vitest": "1.4.0"
  },
  "trustedDependencies": ["@biomejs/biome", "sharp"]
}
