{
  "name": "blog",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.15.3+sha256.fc4a49bd609550a41e14d20efbce802a4b892aa4cac877322de2f0924f122991",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "prepare": "husky",
    "start": "astro dev",
    "build": "astro build",
    "build:clean": "rm -rf ./dist",
    "preview": "pnpm run build && astro preview",
    "check": "astro check",
    "format": "pnpx @biomejs/biome format .",
    "format:fix": "pnpx @biomejs/biome format --write .",
    "lint": "pnpx @biomejs/biome lint .",
    "lint:fix": "pnpx @biomejs/biome lint --apply .",
    "lint:text": "textlint ./src/content/posts/**/*.md",
    "biome": "pnpx @biomejs/biome check .",
    "biome:fix": "pnpx @biomejs/biome check --apply .",
    "biome:ci": "pnpx @biomejs/biome ci .",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:type": "tsc -noEmit",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "coverage:clean": "rm -rf ./coverage",
    "clean": "rm -rf ./node_modules"
  },
  "dependencies": {
    "@astrojs/rss": "4.0.5",
    "@astrojs/sitemap": "3.1.1",
    "@astrojs/tailwind": "5.1.0",
    "@builder.io/qwik": "^1.5.1",
    "@fontsource/jetbrains-mono": "5.0.19",
    "@fontsource/nunito-sans": "5.0.12",
    "@fontsource/zen-kaku-gothic-new": "5.0.18",
    "@iconify-json/gg": "1.1.9",
    "@iconify-json/lucide": "1.1.174",
    "@qwikdev/astro": "^0.5.9",
    "@tailwindcss/container-queries": "0.1.1",
    "astro": "4.5.2",
    "astro-compress": "2.2.14",
    "astro-icon": "^1.1.0",
    "autoprefixer": "10.4.18",
    "markdown-it": "14.0.0",
    "postcss-load-config": "5.0.3",
    "remark-code-titles": "0.1.2",
    "sanitize-html": "2.12.1",
    "tailwindcss": "3.4.1",
    "typescript": "5.4.2",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "0.5.9",
    "@biomejs/biome": "1.6.1",
    "@playwright/test": "1.42.1",
    "@types/markdown-it": "13.0.7",
    "@types/sanitize-html": "2.11.0",
    "@types/unist": "3.0.2",
    "@vitest/coverage-v8": "1.3.1",
    "globals": "14.0.0",
    "husky": "9.0.11",
    "jsdom": "24.0.0",
    "textlint": "14.0.4",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "vitest": "1.3.1"
  }
}
