{
  "name": "blog",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "browserslist": ["defaults"],
  "scripts": {
    "prepare": "husky",
    "new": "scaffdog generate post",
    "dev": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "check:astro": "astro check",
    "check:fix": "bunx @biomejs/biome check --apply .",
    "check:apply": "bunx @biomejs/biome check --apply-unsafe .",
    "check:ci": "bunx @biomejs/biome ci .",
    "lint:text": "textlint ./src/content/posts/**/*.md",
    "lint:ls": "ls-lint",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:type": "tsc -noEmit",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "clean": "rm -rf ./node_modules",
    "clean:astro": "rm -rf ./.astro",
    "clean:build": "rm -rf ./dist",
    "clean:coverage": "rm -rf ./coverage"
  },
  "dependencies": {
    "@astrojs/partytown": "2.0.4",
    "@astrojs/rss": "4.0.5",
    "@astrojs/sitemap": "3.1.3",
    "@astrojs/solid-js": "4.1.0",
    "@astrojs/tailwind": "5.1.0",
    "@fontsource/jetbrains-mono": "5.0.19",
    "@fontsource/zen-kaku-gothic-new": "5.0.18",
    "@kobalte/core": "0.12.6",
    "astro": "4.6.1",
    "astro-expressive-code": "0.35.0",
    "autoprefixer": "10.4.19",
    "clsx": "2.1.0",
    "markdown-it": "14.1.0",
    "postcss-load-config": "5.0.3",
    "rehype-autolink-headings": "7.1.0",
    "rehype-slug": "6.0.0",
    "sanitize-html": "2.13.0",
    "satori": "0.10.13",
    "satori-html": "0.3.2",
    "sharp": "0.33.3",
    "solid-js": "1.8.16",
    "tailwindcss": "3.4.3",
    "typescript": "5.4.5",
    "unist-util-visit": "5.0.0"
  },
  "devDependencies": {
    "@astrojs/check": "0.5.10",
    "@biomejs/biome": "1.7.0",
    "@ls-lint/ls-lint": "2.2.3",
    "@playwright/test": "1.43.1",
    "@types/markdown-it": "14.0.1",
    "@types/sanitize-html": "2.11.0",
    "@types/unist": "3.0.2",
    "@vitest/coverage-v8": "1.5.0",
    "husky": "9.0.11",
    "jsdom": "24.0.0",
    "scaffdog": "3.0.0",
    "textlint": "14.0.4",
    "textlint-filter-rule-allowlist": "4.0.0",
    "textlint-filter-rule-comments": "1.2.2",
    "textlint-rule-preset-ja-technical-writing": "10.0.1",
    "vitest": "1.5.0",
    "wrangler": "3.50.0"
  },
  "trustedDependencies": ["@biomejs/biome", "esbuild", "sharp", "workerd"]
}
