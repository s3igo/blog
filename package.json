{
  "name": "blog",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@8.9.0",
  "browserslist": [
    "defaults"
  ],
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "is-ci || husky install",
    "start": "astro dev",
    "build": "astro build",
    "build:clean": "rm -rf ./dist",
    "preview": "pnpm run build && astro preview",
    "check": "astro check",
    "format": "prettier .",
    "format:fix": "prettier --write .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "lint:text": "textlint ./src/content/posts/**/*.md",
    "test": "vitest",
    "test:unit": "vitest run",
    "test:type": "tsc -noEmit",
    "test:e2e": "playwright test",
    "coverage": "vitest run --coverage",
    "coverage:clean": "rm -rf ./coverage",
    "clean": "rm -rf ./node_modules"
  },
  "dependencies": {
    "@astrojs/check": "^0.2.0",
    "@astrojs/prefetch": "^0.4.1",
    "@astrojs/rss": "^3.0.0",
    "@astrojs/sitemap": "^3.0.1",
    "@astrojs/solid-js": "^3.0.2",
    "@astrojs/tailwind": "^5.0.2",
    "@fontsource/biz-udgothic": "^5.0.14",
    "@fontsource/jetbrains-mono": "^5.0.15",
    "@fontsource/nunito-sans": "^5.0.8",
    "@fontsource/zen-kaku-gothic-new": "^5.0.14",
    "@kobalte/core": "^0.11.0",
    "@kobalte/tailwindcss": "^0.8.0",
    "astro": "^3.3.0",
    "astro-compress": "^2.0.15",
    "date-fns": "^2.30.0",
    "markdown-it": "^13.0.2",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-to-string": "^4.0.0",
    "remark-code-titles": "^0.1.2",
    "remeda": "^1.27.1",
    "sanitize-html": "^2.11.0",
    "solid-js": "^1.8.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@playwright/test": "^1.39.0",
    "@types/markdown-it": "^13.0.2",
    "@types/sanitize-html": "^2.9.2",
    "@typescript-eslint/eslint-plugin": "^6.7.5",
    "@typescript-eslint/parser": "^6.7.5",
    "@vitest/coverage-v8": "^0.34.6",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-astro": "^0.29.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "globals": "^13.23.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "jsdom": "^22.1.0",
    "postcss-load-config": "^4.0.1",
    "prettier": "^3.0.3",
    "prettier-plugin-astro": "^0.12.0",
    "prettier-plugin-sort-json": "^3.1.0",
    "prettier-plugin-tailwindcss": "^0.5.5",
    "textlint": "^13.3.3",
    "textlint-filter-rule-allowlist": "^4.0.0",
    "textlint-filter-rule-comments": "^1.2.2",
    "textlint-rule-preset-ja-technical-writing": "^8.0.0",
    "vitest": "^0.34.6"
  }
}
