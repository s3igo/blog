{
    "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
    "files": {
        "ignore": [".local/"]
    },
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "linter": {
        "rules": {
            "all": true,
            "style": {
                "noDefaultExport": "off"
            },
            "nursery": {
                "useSortedClasses": {
                    "level": "warn",
                    "options": {
                        "attributes": ["class:list"]
                    }
                }
            }
        }
    },
    "formatter": {
        "indentStyle": "space",
        "indentWidth": 4
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single"
        }
    },
    "overrides": [
        {
            "include": ["package.json"],
            "json": {
                "formatter": {
                    "indentWidth": 2
                }
            }
        },
        {
            "include": ["*.astro"],
            "linter": {
                "rules": {
                    "correctness": {
                        "noUnusedImports": "off"
                    }
                }
            }
        }
    ]
}
