{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base",
    ":timezone(Asia/Tokyo)",
    ":prHourlyLimitNone",
    ":automergePatch",
    "label(renovate)",
    "schedule:automergeDaily",
    "schedule:daily"
  ],
  "labels": ["dependencies"],
  "packageRules": [
    {
      "matchUpdateTypes": "major",
      "addLabels": ["major"]
    },
    {
      "matchPackageNames": ["node"],
      "allowedVersions": "<17"
    }
  ]
}
