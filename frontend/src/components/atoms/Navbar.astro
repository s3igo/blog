---
interface Props {
    isTop?: boolean;
}
const { isTop = false } = Astro.props;
const name = "tsukiyo-room";
---

<nav
    class="grid h-20 items-center rounded-full border-2 border-solid border-primary bg-background shadow-[3px_3px_4px_1px] shadow-shadow"
>
    {
        isTop ? (
            <h1 class="local-text">{name}</h1>
        ) : (
            <a href="/" class="local-text">
                {name}
            </a>
        )
    }
</nav>
<style>
    .local-text {
        @apply pl-8 text-[40px] text-primary;
    }
</style>
