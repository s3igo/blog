{
  "name": "app",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "astro dev --host 0.0.0.0",
    "test": "vitest",
    "build": "astro build",
    "build:clean": "rm -rf ./dist",
    "prepreview": "npm run build",
    "preview": "astro preview --host 0.0.0.0",
    "postpreview": "npm run build:clean",
    "preview:e2e": "astro preview",
    "check": "astro check",
    "format": "prettier --write ./src",
    "coverage": "vitest run --coverage",
    "coverage:clean": "rm -rf ./coverage",
    "test:unit": "vitest run",
    "test:type": "vitest typecheck",
    "test:e2e": "playwright test",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "lint:text": "textlint ./src/data/posts/*.md",
    "clean": "rm -rf ./node_modules"
  },
  "dependencies": {
    "@astrojs/rss": "^2.1.1",
    "@astrojs/solid-js": "^2.0.2",
    "@astrojs/tailwind": "^3.0.0",
    "@fontsource/biz-udgothic": "^4.5.7",
    "@fontsource/jetbrains-mono": "^4.5.12",
    "@fontsource/nunito-sans": "^4.5.10",
    "@fontsource/zen-kaku-gothic-new": "^4.5.17",
    "@kobalte/core": "^0.6.2",
    "@kobalte/tailwindcss": "^0.4.2",
    "@tailwindcss/line-clamp": "^0.4.2",
    "astro": "^2.0.1",
    "date-fns": "^2.29.3",
    "mdast-util-to-string": "^3.1.1",
    "night-owl": "github:sdras/night-owl-vscode-theme",
    "remark-normalize-headings": "^3.0.1",
    "remeda": "^1.6.0",
    "sanitize-html": "^2.10.0",
    "solid-icons": "^1.0.4",
    "solid-js": "^1.6.11"
  },
  "devDependencies": {
    "@playwright/test": "^1.31.1",
    "@testing-library/jest-dom": "^5.16.5",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/sanitize-html": "^2.8.0",
    "@typescript-eslint/parser": "^5.48.2",
    "@vitest/coverage-c8": "^0.29.0",
    "autoprefixer": "^10.4.13",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-astro": "^0.23.0",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-sort-destructure-keys": "^1.5.0",
    "jsdom": "^21.1.0",
    "prettier": "^2.8.3",
    "prettier-plugin-astro": "^0.8.0",
    "prettier-plugin-tailwindcss": "^0.2.2",
    "solid-testing-library": "^0.5.1",
    "vitest": "^0.29.2"
  }
}
