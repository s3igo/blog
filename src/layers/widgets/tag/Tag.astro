---
import type { HTMLTag, Polymorphic } from 'astro/types';
import Hash from '../../../../vendor/lucide/hash.svg';

type Props<T extends HTMLTag> = Polymorphic<{ as: T }>;

const { as: Element = 'div', class: className, ...rest } = Astro.props;
---

<Element class:list={["metadata flex items-center gap-1", className]} { ...rest }>
    <slot name="icon">
        <Hash width={16} height={16} />
    </slot>
    <slot />
</Element>
