---
import { Separator } from '@kobalte/core';
import { Tag } from '../base/Tag';
import type { Tags } from '~/domain/values/tags';

type Props = { tags: Tags };
const { tags } = Astro.props;
---

<div class="flex lg:h-full">
    <Separator.Root
        orientation="vertical"
        class="mr-6 h-full rounded-sm border-none bg-slate-400 pr-[1.5px] max-lg:hidden"
    />
    <div class="flex h-max flex-wrap gap-3 lg:flex-col">
        {tags.map((tag) => <Tag name={tag} />)}
    </div>
</div>
