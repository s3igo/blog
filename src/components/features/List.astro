---
import type { CollectionEntry } from 'astro:content';

type Props = { posts: CollectionEntry<'posts'>[] };

const { posts } = Astro.props;

const cards = posts
    .map(({ data, slug }) => ({
        tags: data.tags,
        published: data.published.toISOString().substring(0, 10),
        updated: data.updated?.toISOString().substring(0, 10),
        href: `/posts/${slug}`,
        title: data.title,
    }))
    .toSorted((a, b) => a.published.localeCompare(b.published))
    .toReversed();
---

<main class="flex flex-col gap-4 md:gap-6">
    {
        cards.map(({ tags, published, updated, href, title }) => (
            <a
                href={href}
                class:list={[
                    "rounded-2xl border-2 border-transparent bg-white px-5 py-2 sm:py-4 sm:px-6",
                    "dark:bg-midnight-express",
                    "hover-element"
                ]}
            >
                <article>
                    <div class="flex max-sm:flex-col sm:items-center">
                        <div class="flex flex-wrap gap-4">
                            <div class="metadata">{published}</div>
                            {updated && <div class="metadata">â†»{updated}</div>}
                            {tags.length > 0 &&
                                tags.map((tag) => <div class="metadata">#{tag}</div>)}
                        </div>
                    </div>
                    <h2 class="py-1.5 text-xl xl:text-2xl">{title}</h2>
                </article>
            </a>
        ))
    }
</main>
