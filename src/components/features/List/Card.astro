---
type Props = {
    tags: string[];
    published: string;
    updated: string | null;
    href: string;
    title: string;
};

const { tags, published, updated, href, title } = Astro.props;
---

<a
    href={href}
    class="rounded-3xl border-2 border-transparent bg-white px-5 py-4 hover:border-maldives dark:bg-midnight-express sm:px-8 sm:py-6"
>
    <article>
        <div class="flex max-sm:flex-col sm:items-center">
            <div class="flex flex-wrap gap-2">
                <div class="metadata">{published}</div>
                {updated && <div class="metadata">â†»{updated}</div>}
                {
                    tags.length > 0 &&
                        tags.map((tag) => <div class="metadata">#{tag}</div>)
                }
            </div>
        </div>
        <h2
            class="py-1.5 text-xl before:text-maldives before:content-['#_'] xl:text-2xl"
        >
            {title}
        </h2>
        <!-- <p class="line-clamp-5 xl:text-lg">{description}</p> -->
    </article>
</a>
