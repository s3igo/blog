---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogLayout from '~/components/layouts/BlogLayout.astro';

export const getStaticPaths = async () => {
    const posts = await getCollection('posts');
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));
};

type Props = { post: CollectionEntry<'posts'> };
const { post } = Astro.props;
const { title, published, updated, tags } = post.data;
const { Content } = await post.render();
---

<BlogLayout
    {...{ title, tags }}
    published={published.toISOString().substring(0, 10)}
    updated={updated && updated.toISOString().substring(0, 10)}
>
    <Content />
</BlogLayout>
