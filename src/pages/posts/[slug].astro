---
import { type CollectionEntry, getCollection } from 'astro:content';
import Layout from '~/components/layouts/Post.astro';

export const getStaticPaths = async () =>
    (await getCollection('posts')).map((post) => ({
        params: { slug: post.slug },
        props: { post },
    }));

type Props = { post: CollectionEntry<'posts'> };
const { post } = Astro.props;
const { title, published, updated, tags } = post.data;
const { Content } = await post.render();
---

<Layout
    {...{ title, tags }}
    published={published.toISOString().substring(0, 10)}
    updated={updated && updated.toISOString().substring(0, 10)}
>
    <Content />
</Layout>
